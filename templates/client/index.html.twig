{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}


{% block body %}
	<div class="container-fluid">

		<div class="card shadow-lg">
			<div class="card-header bg-white border-0 pb-0">
				<div class="d-flex justify-content-between align-items-center">
					<h5 class="mb-0 fw-bold text-primary">
						<i class="fas fa-table me-2"></i>Tous les clients
					</h5>
					<a href="{{ path('app_client_new') }}" class="btn btn-success btn-sm">
						<i class="fas fa-plus me-2"></i>Nouveau client
					</a>
				</div>
			</div>

			<div class="table-responsive">
				<table class="table table-hover table-striped mb-0">
					<thead class="table-dark sticky-top">
						<tr>
							<th class="border-0">
								<i class="fas fa-hashtag me-1"></i>ID
							</th>
							<th class="border-0">
								<i class="fas fa-user me-1"></i>Nom
							</th>
							<th class="border-0">
								<i class="fas fa-envelope me-1"></i>Email
							</th>
							<th class="border-0">Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for client in clients %}
							<tr class="align-middle">
								<td class="fw-bold">#{{ client.id }}</td>
								<td><strong>{{ client.nom }}</strong></td>
								<td>
									<i class="fas fa-envelope text-muted me-2"></i>
									{{ client.email }}
								</td>
								<td>
									<div class="btn-group btn-group-sm" role="group">
										<a href="{{ path('app_client_show', {'id': client.id}) }}" class="btn btn-outline-primary" title="Voir">
											<i class="fas fa-eye"></i>Voir
										</a>
										<a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-outline-warning" title="Modifier">
											<i class="fas fa-edit"></i>
										Modifier</a>
									</div>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="4" class="text-center py-5 text-muted">
									<i class="fas fa-inbox fa-3x mb-3 opacity-50"></i>
									<h4>Aucun client trouvé</h4>
									<p class="mb-0">Commencez par en créer un !</p>
									<a href="{{ path('app_client_new') }}" class="btn btn-primary mt-3">
										<i class="fas fa-plus me-2"></i>Premier client
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
